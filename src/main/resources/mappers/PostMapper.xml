<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace = "com.ganghwan.gangstargram.post.dao.PostDAO">
 
 	<!-- 게시글 작성 -->
 	<insert id = "insertPost" parameterType = "map">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `userLoginId`
 			, `content`
 			, `image`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userLoginId}
 			, #{content}
 			, #{image}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<!-- 게시글 보기 -->
 	<select id = "selectPostList" resultType = "com.ganghwan.gangstargram.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userLoginId`
 			, `content`
 			, `image`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		ORDER BY
 			`id` DESC
 	</select>
 	
 	<!-- 게시글 삭제 -->
 	<delete id = "deletePost" parameterType = "int">
 		DELETE FROM `post`
 		WHERE
 			`id` = #{postId}
 	</delete>
 	
 	<!-- 파일 삭제 -->
 	<select id = "selectPost" resultType = "com.ganghwan.gangstargram.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userLoginId`
 			, `content`
 			, `image`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 	</select>
 </mapper>